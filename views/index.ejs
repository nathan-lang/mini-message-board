<html>
  <head>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="msg-box">
      <table>
        <% for (let i=0; i < messages.length; i++) { %>
        <tr>
          <td>
            <a
              href="/details?user=<%= messages[i].user %>&timeDetails=<%= messages[i].timeDetails %>"
              rel="noopener"
              ><%= messages[i].text %></a
            >
          </td>
          <td class="msg-time"><%= messages[i].added %></td>
        </tr>
        <% } %>
      </table>
    </div>
    <br />
    <a href="/new" rel="noopener">Send a message here!</a>
  </body>
</html>
